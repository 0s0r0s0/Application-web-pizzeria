@page
@model pizza_mama.Pages.MenuPizzasModel
@{
}
 <!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/style.css"/>
    <title>Les Pizzas</title>
</head>
<body>

<a asp-page="Index"><img src="~/images/small_logo.png" id="small_logo"/></a>

<div class="menu_title">

    <h1>Les Pizzas</h1>

</div>


<div class="menu_list">

@foreach (var item in Model.Pizza) {
        <div class="menu_list_item" >
                <span class="menu_list_title">@item.nom </span>
                <span class="menu_list_price">@String.Format("{0:0.00}", item.prix)€ </span>
                <br />
                <span class="menu_list_ingredients">@item.ingredients</span>
                @if (item.vegetarienne)
               {
                   <span class="menu_list_badge">Végétarienne</span>
               }
                
        </div>
       
     
        
}
</div>

</body>
</html> 

